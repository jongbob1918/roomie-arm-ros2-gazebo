<?xml version="1.0"?>
<robot name="roomiearm_4dof" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Arguments -->
  <xacro:arg name="use_gazebo" default="false"/>

  <!-- Properties -->
  <xacro:property name="mesh_prefix" value="package://roomiearm_description/meshes"/>
  <xacro:property name="limit_lower" value="-1.54"/>
  <xacro:property name="limit_upper" value="1.54"/>
  <xacro:property name="limit_effort" value="100"/>
  <xacro:property name="limit_velocity" value="3.14"/>
  <xacro:property name="inertia_val" value="0.0001"/>

  <!-- Materials -->
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.1 0.1 0.8 1.0"/>
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>

  <!-- ===================================================== -->
  <!-- ==================== LINKS ======================== -->
  <!-- ===================================================== -->

  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry><mesh filename="${mesh_prefix}/base_link.stl"/></geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry><box size="0.1 0.1 0.08"/></geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Link 1 -->
  <link name="link_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="${inertia_val}" ixy="0.0" ixz="0.0" iyy="${inertia_val}" iyz="0.0" izz="${inertia_val}"/>
    </inertial>
    <visual>
      <geometry><mesh filename="${mesh_prefix}/link_1.stl"/></geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.02" length="0.1"/></geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Link 2 -->
  <link name="link_2">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="${inertia_val}" ixy="0.0" ixz="0.0" iyy="${inertia_val}" iyz="0.0" izz="${inertia_val}"/>
    </inertial>
    <visual>
      <geometry><mesh filename="${mesh_prefix}/link_2.stl"/></geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.02" length="0.12"/></geometry>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Link 3 -->
  <link name="link_3">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="${inertia_val}" ixy="0.0" ixz="0.0" iyy="${inertia_val}" iyz="0.0" izz="${inertia_val}"/>
    </inertial>
    <visual>
      <geometry><mesh filename="${mesh_prefix}/link_3.stl"/></geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.02" length="0.12"/></geometry>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Link 4 -->
  <link name="link_4">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="${inertia_val}" ixy="0.0" ixz="0.0" iyy="${inertia_val}" iyz="0.0" izz="${inertia_val}"/>
    </inertial>
    <visual>
      <geometry><mesh filename="${mesh_prefix}/link_4.stl"/></geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.02" length="0.1"/></geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Tool Tip Link -->
  <link name="tool_tip">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
    </inertial>
  </link>

  <!-- Camera Link -->
  <link name='camera_link_mount'>
    <visual>
      <geometry><mesh filename="${mesh_prefix}/camera.stl"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry><box size="0.02 0.04 0.03"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
    </inertial>
  </link>

  <!-- Camera Optical Frame -->
  <link name="camera_link"/>

  <!-- ===================================================== -->
  <!-- ==================== JOINTS ======================= -->
  <!-- ===================================================== -->

  <!-- World Joint -->
  <link name="world"/>
  <joint name="world_to_base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.002" rpy="0 0 0"/>
  </joint>
    
  <!-- Joint 1 -->
  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.0814" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${limit_lower}" upper="${limit_upper}" effort="${limit_effort}" velocity="${limit_velocity}"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- Joint 2 -->
  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="-0.02 0 0.015" rpy="0 0 0"/>
    <axis xyz="0 -1 0"/>
    <limit lower="${limit_lower}" upper="${limit_upper}" effort="${limit_effort}" velocity="${limit_velocity}"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- Joint 3 -->
  <joint name="joint_3" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="-0.0021 0 0.1035" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="${limit_lower}" upper="${limit_upper}" effort="${limit_effort}" velocity="${limit_velocity}"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- Joint 4 -->
  <joint name="joint_4" type="revolute">
    <parent link="link_3"/>
    <child link="link_4"/>
    <origin xyz="-0.002 0 0.1275" rpy="0 0 0"/>
    <axis xyz="0 -1 0"/>
    <limit lower="${limit_lower}" upper="${limit_upper}" effort="${limit_effort}" velocity="${limit_velocity}"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- Tool Tip Joint -->
  <joint name="joint_tool" type="fixed">
    <parent link="link_4"/>
    <child link="tool_tip"/>
    <origin xyz="0.01 0 0.092" rpy="0 0 0"/>
  </joint>

  <!-- Camera Joint -->
  <joint name='camera_joint' type='fixed'>
    <parent link='link_4'/>
    <child link='camera_link_mount'/>
    <origin xyz="-0.0035 0 0.054" rpy="0 0 0"/>
  </joint>

  <!-- Camera Optical Joint -->
  <joint name="camera_optical_joint" type="fixed">
    <parent link="camera_link_mount"/>
    <child link="camera_link"/>
    <origin rpy="0 0 -1.57079632679" xyz="0 0 0.01"/>
  </joint>

  <!-- ===================================================== -->
  <!-- ================= ROS2_CONTROL ==================== -->
  <!-- ===================================================== -->
  
  <!-- ros2_control 매크로 include -->
  <xacro:include filename="$(find roomiearm_description)/ros2_control/roomie_4dof.ros2_control.xacro"/>
  <xacro:include filename="$(find roomiearm_description)/gazebo/roomie_4dof.gazebo.xacro"/>

  <!-- ros2_control 매크로 호출 -->
  <xacro:roomiearm_4dof_ros2_control name="RoomieSystem" prefix="" use_gazebo="$(arg use_gazebo)"/>

  <xacro:if value="$(arg use_gazebo)">
    <!-- Gazebo 사용시만 포함 -->
    <xacro:roomiearm_4dof_gazebo prefix=""/>
  </xacro:if>

</robot>
