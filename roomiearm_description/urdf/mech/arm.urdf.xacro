<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


  <!-- Properties -->
  <xacro:arg name="base_link" default="base_link"/>
  <xacro:property name="mesh_prefix" value="package://roomiearm_description/meshes"/>
  <xacro:property name="limit_lower" value="${-pi/2}"/>
  <xacro:property name="limit_upper" value="${pi/2}"/>
  <xacro:property name="limit_effort" value="11"/>
  <xacro:property name="limit_velocity" value="7.48"/>

  <!-- Mass Properties -->
  <xacro:property name="link_1_mass" value="0.2"/>
  <xacro:property name="link_2_mass" value="0.2"/>
  <xacro:property name="link_3_mass" value="0.2"/>
  <xacro:property name="link_4_mass" value="0.1"/>
  <xacro:property name="ee_link_mass" value="0.01"/>
  <xacro:property name="camera_mount_mass" value="0.05"/>

  <!-- Inertial Macro -->
  <xacro:macro name="link_inertial" params="mass ixx iyy izz origin_xyz:='0 0 0' origin_rpy:='0 0 0'">
    <inertial>
      <origin xyz="${origin_xyz}" rpy="${origin_rpy}"/>
      <mass value="${mass}"/>
      <inertia
        ixx="${ixx}" ixy="0.0" ixz="0.0"
        iyy="${iyy}" iyz="0.0"
        izz="${izz}"/>
    </inertial>
  </xacro:macro>

  <!-- Materials -->
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.1 0.1 0.8 1.0"/>
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>


  <xacro:macro name="roomiearm_arm"  params="base_link" >

    <!-- ==================== LINKS ======================= -->


    <!-- Link 1 -->
    <link name="link_1">
      <xacro:link_inertial mass="${link_1_mass}" origin_xyz="0 0 0.05" ixx="0.000187" iyy="0.000187" izz="0.00004"/>
      <visual>
        <geometry><mesh filename="${mesh_prefix}/link_1.stl"/></geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry><cylinder radius="0.02" length="0.1"/></geometry>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
      </collision>
    </link>

    <!-- Link 2 -->
    <link name="link_2">
      <xacro:link_inertial mass="${link_2_mass}" origin_xyz="0 0 0.06" ixx="0.00026" iyy="0.00026" izz="0.00004"/>
      <visual>
        <geometry><mesh filename="${mesh_prefix}/link_2.stl"/></geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry><cylinder radius="0.02" length="0.12"/></geometry>
        <origin xyz="0 0 0.06" rpy="0 0 0"/>
      </collision>
    </link>

    <!-- Link 3 -->
    <link name="link_3">
      <xacro:link_inertial mass="${link_3_mass}" origin_xyz="0 0 0.06" ixx="0.00026" iyy="0.00026" izz="0.00004"/>
      <visual>
        <geometry><mesh filename="${mesh_prefix}/link_3.stl"/></geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry><cylinder radius="0.02" length="0.12"/></geometry>
        <origin xyz="0 0 0.06" rpy="0 0 0"/>
      </collision>
    </link>

    <!-- Link 4 -->
    <link name="link_4">
      <xacro:link_inertial mass="${link_4_mass}" origin_xyz="0 0 0.05" ixx="0.000093" iyy="0.000093" izz="0.00002"/>
      <visual>
        <geometry><mesh filename="${mesh_prefix}/link_4.stl"/></geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry><cylinder radius="0.02" length="0.1"/></geometry>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
      </collision>
    </link>

    <!-- End Effector Link -->
    <link name="ee_link">
      <xacro:link_inertial mass="${ee_link_mass}" origin_xyz="0 0 0" ixx="1e-6" iyy="1e-6" izz="1e-6"/>
    </link>

    <!-- Camera Link -->
    <link name='camera_mount'>
      <xacro:link_inertial mass="${camera_mount_mass}" origin_xyz="0 0 0.015" ixx="0.0000104" iyy="0.0000054" izz="0.0000083"/>
      <visual>
        <geometry><mesh filename="${mesh_prefix}/camera.stl"/></geometry>
        <material name="black"/>
      </visual>
      <collision>
        <geometry><box size="0.02 0.04 0.03"/></geometry>
      </collision>
    </link>

    <!-- Camera Optical Frame -->
    <link name="camera_link"/>

    <!-- ==================== JOINTS ======================= -->

    <!-- Joint 1 -->
    <joint name="joint_1" type="revolute">
      <parent link="base_link"/>
      <child link="link_1"/>
      <origin xyz="0 0 0.0814" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${limit_lower}" upper="${limit_upper}" effort="${limit_effort}" velocity="${limit_velocity}"/>
      <dynamics damping="0.7" friction="0.1"/>
    </joint>

    <!-- Joint 2 -->
    <joint name="joint_2" type="revolute">
      <parent link="link_1"/>
      <child link="link_2"/>
      <origin xyz="-0.02 0 0.015" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit lower="${limit_lower}" upper="${limit_upper}" effort="${limit_effort}" velocity="${limit_velocity}"/>
      <dynamics damping="0.7" friction="0.1"/>
    </joint>

    <!-- Joint 3 -->
    <joint name="joint_3" type="revolute">
      <parent link="link_2"/>
      <child link="link_3"/>
      <origin xyz="-0.0021 0 0.1035" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${limit_lower}" upper="${limit_upper}" effort="${limit_effort}" velocity="${limit_velocity}"/>
      <dynamics damping="0.7" friction="0.1"/>
    </joint>

    <!-- Joint 4 -->
    <joint name="joint_4" type="revolute">
      <parent link="link_3"/>
      <child link="link_4"/>
      <origin xyz="-0.002 0 0.1275" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit lower="${limit_lower}" upper="${limit_upper}" effort="${limit_effort}" velocity="${limit_velocity}"/>
      <dynamics damping="0.7" friction="0.1"/>
    </joint>

    <!-- End Effector Joint -->
    <joint name="ee_joint" type="fixed">
      <parent link="link_4"/>
      <child link="ee_link"/>
      <origin xyz="0.01 0 0.092" rpy="0 0 0"/>
    </joint>

  </xacro:macro>

  <!-- Camera Joint -->
  <joint name='camera_joint' type='fixed'>
    <parent link='link_4'/>
    <child link='camera_mount'/>
    <origin xyz="-0.0035 0 0.054" rpy="0 0 0"/>
  </joint>

  <!-- Camera Optical Joint -->
  <joint name="camera_optical_joint" type="fixed">
    <parent link="camera_link_mount"/>
    <child link="camera_link"/>
    <origin xyz="0 0 0.01" rpy="0 0 ${-pi/2}"/>
  </joint>

</robot>
