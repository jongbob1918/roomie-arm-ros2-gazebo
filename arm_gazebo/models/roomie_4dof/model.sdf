<?xml version="1.0" ?>
<sdf version="1.7">
  <model name="roomie_4dof">
    <pose>0 0 0 0 0 0</pose>
    
    <!-- Base Link -->
    <link name="base_link">
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <iyy>0.1</iyy>
          <izz>0.1</izz>
        </inertia>
      </inertial>
      <visual name="base_visual">
        <geometry>
          <mesh>
            <uri>package://arm_description/meshes/base_link.stl</uri>
          </mesh>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/DarkGrey</name>
          </script>
        </material>
      </visual>
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.1 0.1 0.05</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Link 1 -->
    <link name="link_1">
      <pose relative_to="joint_1">0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.05</ixx>
          <iyy>0.05</iyy>
          <izz>0.05</izz>
        </inertia>
      </inertial>
      <visual name="link1_visual">
        <geometry>
          <mesh>
            <uri>package://arm_description/meshes/link_1.stl</uri>
          </mesh>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Orange</name>
          </script>
        </material>
      </visual>
      <collision name="link1_collision">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.08</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- Link 2 -->
    <link name="link_2">
      <pose relative_to="joint_2">0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.3</mass>
        <inertia>
          <ixx>0.03</ixx>
          <iyy>0.03</iyy>
          <izz>0.03</izz>
        </inertia>
      </inertial>
      <visual name="link2_visual">
        <geometry>
          <mesh>
            <uri>package://arm_description/meshes/link_2.stl</uri>
          </mesh>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Blue</name>
          </script>
        </material>
      </visual>
      <collision name="link2_collision">
        <geometry>
          <box>
            <size>0.15 0.04 0.04</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Link 3 -->
    <link name="link_3">
      <pose relative_to="joint_3">0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.02</ixx>
          <iyy>0.02</iyy>
          <izz>0.02</izz>
        </inertia>
      </inertial>
      <visual name="link3_visual">
        <geometry>
          <mesh>
            <uri>package://arm_description/meshes/link_3.stl</uri>
          </mesh>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Green</name>
          </script>
        </material>
      </visual>
      <collision name="link3_collision">
        <geometry>
          <box>
            <size>0.12 0.03 0.03</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Link 4 (End Effector) -->
    <link name="link_4">
      <pose relative_to="joint_4">0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.01</ixx>
          <iyy>0.01</iyy>
          <izz>0.01</izz>
        </inertia>
      </inertial>
      <visual name="link4_visual">
        <geometry>
          <mesh>
            <uri>package://arm_description/meshes/link_4.stl</uri>
          </mesh>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Red</name>
          </script>
        </material>
      </visual>
      <collision name="link4_collision">
        <geometry>
          <box>
            <size>0.02 0.02 0.05</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Camera Link -->
    <link name="camera_link">
      <pose relative_to="link_4">0.02 0 0.01 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.005</ixx>
          <iyy>0.005</iyy>
          <izz>0.005</izz>
        </inertia>
      </inertial>
      <visual name="camera_visual">
        <geometry>
          <mesh>
            <uri>package://arm_description/meshes/camera.stl</uri>
          </mesh>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Black</name>
          </script>
        </material>
      </visual>
      <collision name="camera_collision">
        <geometry>
          <box>
            <size>0.02 0.03 0.02</size>
          </box>
        </geometry>
      </collision>
      
      <!-- Camera Sensor -->
      <sensor name="camera" type="camera">
        <pose>0.01 0 0 0 0 0</pose>
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.1</near>
            <far>5.0</far>
          </clip>
        </camera>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <topic>camera</topic>
      </sensor>
    </link>

    <!-- Joint 1: Base to Link 1 -->
    <joint name="joint_1" type="revolute">
      <pose relative_to="base_link">0 0 0.05 0 0 0</pose>
      <parent>base_link</parent>
      <child>link_1</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-3.14</lower>
          <upper>3.14</upper>
          <effort>10</effort>
          <velocity>2.0</velocity>
        </limit>
        <dynamics>
          <damping>0.1</damping>
          <friction>0.1</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- Joint 2: Link 1 to Link 2 -->
    <joint name="joint_2" type="revolute">
      <pose relative_to="link_1">0 0 0.08 0 0 0</pose>
      <parent>link_1</parent>
      <child>link_2</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
          <effort>10</effort>
          <velocity>2.0</velocity>
        </limit>
        <dynamics>
          <damping>0.1</damping>
          <friction>0.1</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- Joint 3: Link 2 to Link 3 -->
    <joint name="joint_3" type="revolute">
      <pose relative_to="link_2">0.15 0 0 0 0 0</pose>
      <parent>link_2</parent>
      <child>link_3</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-2.09</lower>
          <upper>2.09</upper>
          <effort>10</effort>
          <velocity>2.0</velocity>
        </limit>
        <dynamics>
          <damping>0.1</damping>
          <friction>0.1</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- Joint 4: Link 3 to Link 4 -->
    <joint name="joint_4" type="revolute">
      <pose relative_to="link_3">0.12 0 0 0 0 0</pose>
      <parent>link_3</parent>
      <child>link_4</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
          <effort>5</effort>
          <velocity>2.0</velocity>
        </limit>
        <dynamics>
          <damping>0.1</damping>
          <friction>0.1</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- Camera Joint: Link 4 to Camera -->
    <joint name="camera_joint" type="fixed">
      <parent>link_4</parent>
      <child>camera_link</child>
    </joint>

    <!-- Gazebo Plugins -->
    <plugin
      filename="gz-sim-joint-state-publisher-system"
      name="gz::sim::systems::JointStatePublisher">
    </plugin>
    
    <plugin
      filename="gz-sim-joint-position-controller-system"
      name="gz::sim::systems::JointPositionController">
      <joint_name>joint_1</joint_name>
    </plugin>
    
    <plugin
      filename="gz-sim-joint-position-controller-system"
      name="gz::sim::systems::JointPositionController">
      <joint_name>joint_2</joint_name>
    </plugin>
    
    <plugin
      filename="gz-sim-joint-position-controller-system"
      name="gz::sim::systems::JointPositionController">
      <joint_name>joint_3</joint_name>
    </plugin>
    
    <plugin
      filename="gz-sim-joint-position-controller-system"
      name="gz::sim::systems::JointPositionController">
      <joint_name>joint_4</joint_name>
    </plugin>

  </model>
</sdf>
